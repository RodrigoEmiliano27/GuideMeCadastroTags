<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GuideMeCadastroTags.Views.CadastroTagPage"
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="Text:" FontSize="Medium" />
        <Label Text="{Binding Text}" FontSize="Small"/>
        <Label Text="Description:" FontSize="Medium" />
        <Label Text="{Binding Description}" FontSize="Small"/>
        <Label Text="Tag ID" FontSize="Title" TextColor="Black"/>
        <Entry Text="{Binding TagID}" TextColor="Black" FontSize="Medium"/>
        <Label Text="Nome" FontSize="Title" TextColor="Black"/>
        <Entry IsPassword="False" TextColor="Black" HorizontalTextAlignment="Center" Text="{Binding Nome}"/>
        <Button VerticalOptions="Center" Text="Salvar Tag" Command="{Binding SalvarCommand}"/>
    </StackLayout>
    
</ContentPage>